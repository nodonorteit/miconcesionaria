# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/miconcesionaria"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Email Configuration (Development - MailHog)
# MailHog captura todos los emails en desarrollo
# Ver emails en: http://localhost:8025
SMTP_HOST="mailhog"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""

# For production, use real SMTP settings:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB in bytes

# Application
NODE_ENV="development" 